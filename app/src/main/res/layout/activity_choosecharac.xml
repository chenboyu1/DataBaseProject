<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sideboxScroll"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#EDCDCE"
        android:layout_marginEnd="46dp">

        <LinearLayout
            android:id="@+id/sidebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 动态生成按钮 -->
        </LinearLayout>
    </ScrollView>
    </FrameLayout>
    <TextView
        android:id="@+id/chartext"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:text="@string/chartext"
        android:textAppearance="@style/chartext"
        android:gravity="center_horizontal|top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sidebox"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        tools:ignore="NotSibling"
        android:background="@drawable/choosecha_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>