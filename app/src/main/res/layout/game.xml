<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 頂部的進度條和心形圖示 -->

    <!-- 一個空的 View，這個 View 會把 TextView 推到底部 -->

    <!-- 中間的遊戲角色和四個按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <!-- 心形圖示 -->
        <ImageView
            android:id="@+id/heart_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/heart2" />

        <!-- 好感度進度條 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="50" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <!-- 中間的遊戲角色，增大角色 -->
        <ImageView
            android:id="@+id/game_character"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/jewel15_colorful" />

        <!-- 左上角的「互動」按鈕 -->
        <Button
            android:id="@+id/interaction_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/game_character"
            android:layout_alignTop="@id/game_character"
            android:layout_marginStart="-300dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_button_background3"
            android:text="互動"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <!-- 左下角的「任務」按鈕 -->
        <Button
            android:id="@+id/task_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/game_character"
            android:layout_alignBottom="@id/game_character"
            android:layout_marginStart="-300dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle_button_background3"
            android:text="任務"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <!-- 右上角的「商城」按鈕 -->
        <Button
            android:id="@+id/shop_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/game_character"
            android:layout_alignEnd="@id/game_character"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-300dp"
            android:background="@drawable/circle_button_background3"
            android:text="商城"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <!-- 右下角的「背包」按鈕 -->
        <Button
            android:id="@+id/backpack_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@id/game_character"
            android:layout_alignBottom="@id/game_character"
            android:layout_marginEnd="-300dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle_button_background3"
            android:text="背包"
            android:textColor="#000000"
            android:textSize="24sp"/>
    </RelativeLayout>

    <!-- 下方的文字框，將文字框推到底部 -->
    <TextView
        android:id="@+id/message_box"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/message_box_background"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="這裡顯示訊息"
        android:textColor="#333333"
        android:textSize="24sp" />
</LinearLayout>
