<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 使用 ScrollView 並將內容視窗縮小並置中 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="995dp"
        android:layout_height="381dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="70dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 標題或描述文字 -->
            <TextView
                android:id="@+id/tv_mission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="每日任務"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- 任務項目列表 -->

            <!-- 任務1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mission_item_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="完成每日登入"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mission_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B5C7C9"
                    android:text="+10" />
            </LinearLayout>

            <!-- 任務2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mission_item_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="進行一次餵食"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mission_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B5C7C9"
                    android:text="+10" />
            </LinearLayout>

            <!-- 任務3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mission_item_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="在商店購買一項商品"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mission_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B5C7C9"
                    android:text="+10" />
            </LinearLayout>

            <!-- 任務4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mission_item_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="進行一次聊天"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mission_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B5C7C9"
                    android:text="+10" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 退出按鈕放置在左上角 -->
    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="1032dp"
        android:layout_marginTop="144dp"
        android:background="@color/white"
        android:backgroundTint="#B5C7C9"
        android:src="@drawable/baseline_clear_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Close button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
