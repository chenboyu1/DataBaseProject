<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5C7C9"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:scrollbarThumbVertical="@drawable/activity_shop_scrollbar"
    android:paddingRight="10dp"> <!-- 保持滾動條可見 --> <!-- 設置背景顏色 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ><!--按鈕的-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:paddingStart="60dp">

            <!-- 第一个跳转按钮 -->
            <Button
                android:id="@+id/button_page_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转到新页面1" />

            <!-- 第二个跳转按钮 -->
            <Button
                android:id="@+id/button_page_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="跳转到新页面2" />

            <!-- 第三个跳转按钮 -->
            <Button
                android:id="@+id/button_page_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="跳转到新页面3" />
        </LinearLayout>


        <!-- 內容區域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行商品按鈕 -->

            <!-- 這裡可以添加更多的商品行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:padding="25dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/food1"
                        android:text=" "/>

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="割包"
                        android:textColor="#000"
                        android:textSize="40sp"
                        tools:ignore="RtlCompat" />  <!-- 文本居中 -->
                    <!-- 文字水平居中 -->

                </LinearLayout>
                <!-- 第1個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/can_cola"
                        android:text=" "/>

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="可樂"
                        android:textColor="#000"
                        android:textSize="40sp"
                        tools:ignore="RtlCompat"/>
                </LinearLayout>
                <!-- 第2個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 3" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 3"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第3個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 4" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 4"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第4個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 5" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 5"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第5個 -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="25dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_6"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 6" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 6"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第6個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_7"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 7" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 7"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第7個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_8"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 8" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 8"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第8個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_9"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 9" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 9"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第9個 -->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="5"
                    android:orientation="vertical"><!-- 設定為垂直方向 -->

                    <Button
                        android:id="@+id/button2_product_10"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 10" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description2_product_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="描述商品 10"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="40sp" />
                </LinearLayout>
                <!-- 第10個 -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>