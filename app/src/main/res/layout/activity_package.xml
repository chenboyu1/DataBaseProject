<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/android_exp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@drawable/package_android_exp">

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="1280dp"
        android:layout_height="800dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/pagename"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:text="@string/pagename"
        android:textAppearance="@style/pagename"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/sidebox"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:background="#9DD3FC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/decorate1"
        android:layout_width="125dp"
        android:layout_height="123dp"
        android:background="@drawable/package_decorate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sidebox"
        android:layout_marginTop="74dp"
        android:layout_marginStart="74dp"/>

    <View
        android:id="@+id/decorate2"
        android:layout_width="125dp"
        android:layout_height="123dp"
        android:background="@drawable/package_decorate"
        app:layout_constraintTop_toBottomOf="@+id/decorate1"
        app:layout_constraintStart_toStartOf="@+id/sidebox"
        android:layout_marginTop="115dp"
        android:layout_marginStart="74dp"/>

    <View
        android:id="@+id/decorate3"
        android:layout_width="125dp"
        android:layout_height="123dp"
        android:background="@drawable/package_decorate"
        app:layout_constraintTop_toBottomOf="@+id/decorate2"
        app:layout_constraintStart_toStartOf="@+id/sidebox"
        android:layout_marginTop="115dp"
        android:layout_marginStart="74dp"/>

    <View
        android:id="@+id/slidebtn"
        android:layout_width="26dp"
        android:layout_height="95dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="31dp" />

    <View
        android:id="@+id/retbtn"
        android:layout_width="79dp"
        android:layout_height="77dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="43dp"
        android:layout_marginTop="38dp" />

    <View
        android:id="@+id/retsign"
        android:layout_width="27.93dp"
        android:layout_height="34.22dp"
        android:background="@drawable/package_retsign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="63.19dp"
        android:layout_marginTop="60.06dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

