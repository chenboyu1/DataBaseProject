<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5C7C9"> <!-- 設置背景顏色 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"><!--按鈕的-->

        <!-- 背景圖
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/your_background_image"  保替換為你的背景圖片
        android:contentDescription="background image"/>  還沒放照片
        -->


        <!-- 內容區域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行商品按鈕 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:padding="25dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_product_1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="商品 1" />

                    <!-- 描述文字放在按鈕下方 -->
                    <TextView
                        android:id="@+id/description_product_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="描述商品 1"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_product_2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 2" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 3" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 4" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_5"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 5" /> <!-- 按鈕間距 -->
            </LinearLayout>

            <!-- 這裡可以添加更多的商品行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:padding="25dp">

                <Button
                    android:id="@+id/button_product_6"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 6" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_7"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 7" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_8"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 8" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_9"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 9" /> <!-- 按鈕間距 -->

                <Button
                    android:id="@+id/button_product_10"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"

                    android:text="商品 10" /> <!-- 按鈕間距 -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
