<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义基于 AppCompat 的主题 -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- 可以根据需要添加更多主题属性 -->
    </style>

    <style name="pagename">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#0096F3</item>
        <item name="android:fontFamily">sans-serif</item> <!-- 如果需要自定义字体 -->
    </style>
    <style name="initial_pagename">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="regiontext">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="chartext">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
    </style>

        <!-- 透明對話框樣式 -->
    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>



