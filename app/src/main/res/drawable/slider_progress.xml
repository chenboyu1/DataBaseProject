<!-- res/drawable/slider_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D9D9D9"/> <!-- 滑动条的背景颜色 -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#0096F3"/> <!-- 已滑动区域的颜色 -->
            </shape>
        </clip>
    </item>
</layer-list>
